<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_smarttapeicon"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:padding="20dp"
        android:text="Hello Friend feel free to dive in the Smart Tape settings"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:background="@color/colorPrimary"
        android:layout_height="3dp"
        android:layout_width="368dp"
        android:id="@+id/imageView5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMemo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_selector"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawableStart="@drawable/ic_assignment_black_24dp"
                android:onClick="onClickMemo"
                android:padding="8dp"
                android:text="     Memo"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/fblike"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_selector"
                android:drawableStart="@drawable/ic_thumb_up_red_24dp"
                android:onClick="onClickLikeUs"
                android:padding="8dp"
                android:text="     Like Us"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_selector"
                android:drawableStart="@drawable/ic_share_black_24dp"
                android:onClick="onclickShare"
                android:padding="8dp"
                android:text="     Share  App"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/list_item_selector"
                android:drawableLeft="@drawable/ic_google"
                android:drawableStart="@drawable/ic_google"
                android:padding="8dp"
                android:text="     Connect with Google+"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btnSignout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_selector"
                android:drawableLeft="@drawable/ic_google"
                android:drawableStart="@drawable/ic_google"
                android:padding="8dp"
                android:text="     Sign Out"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:visibility="gone"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnfeedback"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:onClick="onClickFeedback"
                android:background="@drawable/list_item_selector"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawableStart="@drawable/ic_feedback_black_24dp"
                android:padding="8dp"
                android:text="     Feedback"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Switch
                android:id="@+id/showGuide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_selector"
                android:drawableStart="@drawable/ic_swap_horiz_black_24dp"
                android:padding="8dp"
                android:text="     Show guide"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/list_item_selector"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawableStart="@drawable/ic_info_black_24dp"
                android:onClick="onClickAbout"
                android:padding="8dp"
                android:text="     About"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
